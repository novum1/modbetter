    background: var(--orange);
    padding: 2rem 0;
  }

  .page-banner h1 {
    color: var(--white);
    font-size: 2rem;
    text-transform: uppercase;
    margin: 0;
  }

  main {
    padding: 3rem 0 4rem;
    flex: 1;
  }

  .plan {
    padding: 2rem 0;
    border-bottom: 1px solid #ddd;
  }

  .plan:last-child {
    border-bottom: none;
  }

  .plan-content {
    max-width: 800px;
  }

  .plan h2 {
    color: var(--navy);
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .plan p {
    line-height: 1.7;
    margin-bottom: 1rem;
    color: #333;
  }

  .plan strong {
    color: var(--navy);
  }

  .btn {
    margin-top: 0.5rem;
  }
</style>
